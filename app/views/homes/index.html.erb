<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
        <div class="row">
          <div class="col-md-12">
            <center><h3>ADMIN DASHBOARD</h3></center>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <label class="my_label">Total Drivers:</label>
          </div>
          <div class="col-md-6">
            <label class="my_value"> <%= @drivers %> </label>
          </div>
        </div>
        <hr>

        <div class="row">
          <div class="col-md-6">
            <label class="my_label">Total Buses:</label>
          </div>
          <div class="col-md-6">
            <label class="my_value"> <%= @buses %> </label>
          </div>
        </div>
        <hr>

        <div class="row">
          <div class="col-md-6">
            <label class="my_label">Total Active Buses:</label>
          </div>
          <div class="col-md-6">
            <label class="my_value"> <%= @active %> </label>
          </div>
        </div>
        <hr>

        <div class="row">
          <div class="col-md-6">
            <label class="my_label">Total Un-Active Buses:</label>
          </div>
          <div class="col-md-6">
            <label class="my_value"> <%= @unactive %> </label>
          </div>
        </div>
        <hr>

        <div class="row">
          <div class="col-md-6">
            <label class="my_label">Total Students:</label>
          </div>
          <div class="col-md-6">
            <label class="my_value"> <%= @std %> </label>
          </div>
        </div>
        <hr>

        <div class="row">
          <div class="col-md-6">
            <label class="my_label">Total Approve Students:</label>
          </div>
          <div class="col-md-6">
            <label class="my_value"> <%= @std_approve %> </label>
          </div>
        </div>
        <hr>

        <div class="row">
          <div class="col-md-6">
            <label class="my_label">Total Un-Approve Students:</label>
          </div>
          <div class="col-md-6">
            <label class="my_value"> <%= @std_unapprove %> </label>
          </div>
        </div>
        <hr>


      </div>
    </div>
  </div>
</div>
