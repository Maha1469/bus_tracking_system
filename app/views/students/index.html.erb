<div class="row">
  <div class="col-md-12">
    <center><h1>LISTING ALL STUDENTS</h1></center>
  </div>
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark" style="background:#D68910;color:#FFFFFF;font-weight:bold;cursor:pointer;">
          <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Roll Number</th>
            <th>Batch Number</th>
            <th>Semester</th>
            <th>Department</th>
            <th>Registration Time</th>
            <th colspan="3" style="text-align:center;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
            <tr style="color:#D68910;">
              <td><%= student.user.email %></td>
              <td><%= student.name %></td>
              <td><%= student.roll_number %></td>
              <td><%= student.batch_number %></td>
              <td><%= student.semester %></td>
              <td><%= student.department %></td>
              <% @str1 = student.created_at.to_s %>
              <% @str1 = @str1.tr('UTC', '')%>
              <td><%= @str1 %></td>
              <td><%= link_to 'Show', student, class:"btn btn-success"%></td>
              <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure to delete this Student?' }, class:"btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <center><%= will_paginate @students, renderer: BootstrapPagination::Rails %></center>
  </div>
</div>
