<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
        <div class="row">
          <div class="col-md-12"><center><h2>Student Detail</h2></center></div>
        </div>
        <hr>

        <div class="row">
          <div class="col-md-4">
            <label class="my_label">Student's Email:</label>
          </div>
          <div class="col-md-8">
            <label class="my_value"> <%= @student.user.email %> </label>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <label class="my_label">Student's Name:</label>
          </div>
          <div class="col-md-8">
            <label class="my_value"> <%= @student.name %> </label>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <label class="my_label">Student's Roll Number:</label>
          </div>
          <div class="col-md-8">
            <label class="my_value"> <%= @student.roll_number %> </label>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <label class="my_label">Student's BATCH Number:</label>
          </div>
          <div class="col-md-8">
            <label class="my_value"> <%= @student.batch_number %> </label>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <label class="my_label">Student's Semester:</label>
          </div>
          <div class="col-md-8">
            <label class="my_value"> <%= @student.semester %> </label>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <label class="my_label">Student's Department:</label>
          </div>
          <div class="col-md-8">
            <label class="my_value"> <%= @student.department %> </label>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <label class="my_label">Profile Status:</label>
          </div>
          <div class="col-md-8">
            <%if @student.approve%>
              <label class="my_value"> Approved </label>
            <%else%>
              <label class="my_value"> Un-Approved </label>
            <%end%>
          </div>
        </div>
        <%if @student.approve == false%>
          <hr>
          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-3">
              <%= link_to 'Decline Profile', decline_student_path(@student), class:"btn btn-block btn-danger" %>
            </div>
            <div class="col-md-3">
                <%= link_to 'Approve Profile', approve_student_path(@student), class:"btn btn-block btn-success" %>
            </div>
            <div class="col-md-3"></div>
          </div>
        <%end%>
        <hr>
        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-4">
            <%= link_to 'Back', students_path, class:"btn btn-block btn-info" %>
          </div>
          <div class="col-md-4"></div>
        </div>
      </div>
    </div>
  </div>
</div>
