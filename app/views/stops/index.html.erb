<div class="row">
  <div class="col-md-12">
    <center><h1>LISTING ALL STOPS</h1></center>
  </div>
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark" style="background:#D68910;color:#FFFFFF;font-weight:bold;cursor:pointer;">
          <tr>
            <th>Bus Number</th>
            <th>Stop Number</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Name</th>
            <th colspan="3">ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% @stops.each do |stop| %>
            <tr style="color:#D68910;">
              <td><%= stop.bus.bus_number %></td>
              <td><%= stop.stop_number %></td>
              <td><%= stop.latitude %></td>
              <td><%= stop.longitude %></td>
              <td><%= stop.name %></td>
              <td><%= link_to 'Edit', edit_stop_path(stop), class:"btn btn-info"%></td>
              <td><%= link_to 'Destroy', stop, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
